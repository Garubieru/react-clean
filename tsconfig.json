{
  "compilerOptions": {
    "target": "es6",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types", "jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "./jest-setup.ts"],
  "exclude": ["src/main/test/cypress"]
}
